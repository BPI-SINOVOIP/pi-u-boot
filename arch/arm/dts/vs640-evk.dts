/dts-v1/;

#include "vs640.dtsi"
#include "include/dt-bindings/gpio/gpio.h"
#include "berlin-fastboot-gui.dtsi"

/ {
	model = "Synaptics VS640 EVK";
	compatible = "Synaptics,vs640", "Synaptics,asserial";

	memory {
		device_type = "memory";
		reg = <0 0 0 0x80000000>;
	};

	fts {
		compatible = "google,flash-ts-mmc";
	};

	chosen {
        stdout-path = &smuart0;
    };

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		usb0_vbus: regulator@0 {
			compatible = "regulator-fixed";
			regulator-name = "usb0_vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			gpio = <&expander1 6 GPIO_ACTIVE_HIGH>;
			enable-active-high;
		};

		xhci0_vbus: xhci0_vbus {
			compatible = "regulator-fixed";
			regulator-name = "xhci0_vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			gpio = <&expander1 5 GPIO_ACTIVE_HIGH>;
			enable-active-high;
		};
	};
};

&sysmgr_pinctrl {
	sm_i2c_tw3_pmux: sm_i2c_tw3_pmux {
		groups = "SM_TW3_SCL", "SM_TW3_SDA";
		function = "tw3";
	};
};

&pinctrl {
	usb_vbus_pmux: usb_vbus_pmux {
		groups = "USB2_DRV_VBUS";
		function = "gpio";
	};
};

&CPU_SLEEP_0 {
	status = "disabled";
};

&smuart0 {
	status = "okay";
};

&spi0 {
	status = "okay";
	max-write-size = <128>;
	clock-frequency = <200000000>;
	spi-flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		memory-map = <0x0 0xf0000000 0x0 0x4000000>;
		spi-max-frequency = <10000000>;
        };
};

&i2c3 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&sm_i2c_tw3_pmux>;
	expander0: gpio@43 {
		compatible = "fcs,fxl6408";
		reg = <0x43>;
		gpio-controller;
		#gpio-cells = <2>;
	};

	expander1: gpio@44 {
		compatible = "fcs,fxl6408";
		reg = <0x44>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&mdio0 {
	phy0: ethernet-phy@0 {
		reg = <0>;
	};
};

&gmac0 {
	status = "okay";
	max-speed = <100>;
	phy-mode = "mii";
	phy-handle = <&phy0>;
	phy = <&phy0>;
};

&sdhci2 {
    status = "okay";
	max-frequency = <50000000>;
	cap-mmc-highspeed;
	1_8v-signalling;
};

&usb_phy0 {
	status = "okay";
};

&usb0 {
	vbus-supply = <&usb0_vbus>;
	status = "okay";
};

&usb_phy1 {
	status = "okay";
};

&xhci0 {
	vbus-supply = <&xhci0_vbus>;
	snps,reset-gpio = <&expander1 0 GPIO_ACTIVE_HIGH>;
	snps,reset-active-high;
	status = "okay";
};

