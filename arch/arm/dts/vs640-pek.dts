/dts-v1/;

#include "vs640.dtsi"
#include "include/dt-bindings/gpio/gpio.h"

/ {
	model = "Synaptics VS640 PEK";
	compatible = "Synaptics,vs640", "Synaptics,asserial";

	memory {
		device_type = "memory";
		reg = <0 0 0 0x80000000>;
	};

	fts {
		compatible = "google,flash-ts-mmc";
	};

	chosen {
        stdout-path = &smuart0;
    };

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		xhci0_vbus: xhci0_vbus {
			compatible = "regulator-fixed";
			regulator-name = "xhci0_vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			gpio = <&expander2 4 GPIO_ACTIVE_HIGH>;
			enable-active-high;
		};
	};
};

&pinctrl {
	soc_i2c_tw0_pmux: soc_i2c_tw0_pmux {
		groups = "TW0_SCL", "TW0_SDA";
		function = "tw0";
	};
};

&smuart0 {
	status = "okay";
};

&i2c0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&soc_i2c_tw0_pmux>;
	expander2: gpio@71 {
		compatible = "nxp,pca9538";
		reg = <0x71>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&spi0 {
	status = "okay";
	max-write-size = <128>;
	clock-frequency = <100000000>;
	spi-flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		memory-map = <0x0 0xf0000000 0x0 0x4000000>;
		spi-max-frequency = <10000000>;
        };
};

&mdio0 {
	phy0: ethernet-phy@0 {
		reg = <0>;
	};
};

&gmac0 {
	status = "okay";
	max-speed = <10>;
	phy-mode = "mii";
	phy-handle = <&phy0>;
	phy = <&phy0>;
};

&sdhci2 {
    status = "okay";
	max-frequency = <50000000>;
	cap-mmc-highspeed;
	1_8v-signalling;
};

&usb_phy0 {
	status = "okay";
};

&usb0 {
	status = "okay";
};

&usb_phy1 {
	status = "okay";
};

&xhci0 {
	vbus-supply = <&xhci0_vbus>;
	status = "okay";
};
