/dts-v1/;

#include "vs640.dtsi"
#include "include/dt-bindings/gpio/gpio.h"
#include "berlin-fastboot-gui.dtsi"

/ {
	model = "Synaptics VS640 FASTBOOT";
	compatible = "Synaptics,vs640", "Synaptics,asserial";
	fastboot,product-name = "vs640";

	memory {
		device_type = "memory";
		reg = <0 0x06a00000 0 0x60600000>;
	};

	fts {
		compatible = "google,flash-ts-mmc";
	};

	chosen {
                stdout-path = &smuart0;
        };

	fb_hdmi {
		compatible = "fb,hdmi-5v-gpio";
		hdmi-gpio = <&portb 3 GPIO_ACTIVE_HIGH>;
		output-high;
	};
};

&sysmgr_pinctrl {
	sm_i2c_tw3_pmux: sm_i2c_tw3_pmux {
		groups = "SM_TW3_SCL", "SM_TW3_SDA";
		function = "tw3";
	};
};

&CPU_SLEEP_0 {
	status = "disabled";
};

&smuart0 {
	status = "okay";
};

&mdio0 {
	phy0: ethernet-phy@0 {
		reg = <0>;
	};
};

&i2c3 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&sm_i2c_tw3_pmux>;
	expander0: gpio@43 {
		compatible = "fcs,fxl6408";
		reg = <0x43>;
		gpio-controller;
		#gpio-cells = <2>;
	};

	expander1: gpio@44 {
		compatible = "fcs,fxl6408";
		reg = <0x44>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&gmac0 {
	status = "okay";
	max-speed = <100>;
	phy-mode = "mii";
	phy-handle = <&phy0>;
	phy = <&phy0>;
};

&sdhci2 {
	status = "okay";
	max-frequency = <50000000>;
	cap-mmc-highspeed;
	1_8v-signalling;
};

&usb_phy0 {
	status = "okay";
};

&usb0 {
	status = "okay";
};
